{
    "files.exclude": {
        "_site/**": true,
        "**/.git": false
    },
    "files.insertFinalNewline": true,
    "foam.openDailyNote.directory": "docs",
    "foam.openDailyNote.filenameFormat": "'DailyNote'-yyyy-mm-dd", // Eg.: DailyNote-2022-01-13.md
    "foam.graph.style": {
        "fontSize": 13,
        "lineColor": "#277da1",
        "lineWidth": 0.6,
        "background": "#202020",
        // "highlightedForeground": "#C07AFAFF",
        "highlightedForeground": "#f9c74fFF",
        // "highlightedForeground": "#856DFFFF",
        "particleWidth": 1.5,
        "node": {
            // "note": "#C5ECFCFF",
            "note": "#FFFFFFFF",
            // "placeholder": "#4855E8FF",
            "tag": "#FF9900FF",
            "feature": "#E15858FF",
            "todo": "#54C738FF",
            "english": "#D998FAFF",
            // "solidworks": "#F7F77DFF",
            "solidworks": "#F4C3C3FF",
            "other": "#A3FFDAFF"
        },
    },
    "foam.files.ignore": [
        "**/.vscode/**/*",
        "**/_layouts/**/*",
        "**/_site/**/*",
        "**/node_modules/**/*",
        "**/scaffolds/**"
    ]
}
